{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Z",
	"patterns": [
		{
			"include": "#string"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#hex"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#file"
		},
		{
			"include": "#tags"
		},
		{
			"include": "#types"
		},
		{
			"include": "#call"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "constant.character.reserved.z",
				"match": "(?i)(?<!\\w-)\\b(ADJSW|ARM-ADDR|AUTOFF|BOX-CHAR|BRIGHT|CHAIN-LEVEL|CR-LF|CUR(DA|MO|YR)|CURDATE|DATE-SW|DATE3|DAY|DD1|DEBUG|DEBUG-KEY|DETBUFFADDR|DETBUFFLEN|DIM|ENVIRN|EOFLINE|EOFPOS|ERR-BEEP|ERROR-FIELD|ERROR-LINE|ERROR-MODE|ERROR-POS|FKEY|FLDCHG|FLDINIT|FLDREAD|FLDSECURE|FLOAT-SW|FN1|GETDATE|GRAPHICS-CHARS|HDGSKIPLINES|HDGSW|HOLD-USER|IMAADDR|IMAFUNC|IMALEN|IMALINE|IMALINEPOS|IMAMAX|IMAPOS|IMAUSR|IMAFXL|INFLAGS|INPATHNAME|INPCOL|INPLINE|INPUT-FIELD|INPUT-LINE|INPUT-POS|INPUT-TAB|INPUTAREA|INTENSITY|IO-FUNC|IOACCESS|IOADDR|IOCALLBACK|IOCB|IOCHARS|IOCNT|IOCOUNT|IOCTL|IOCURBLK|IOEOF|IOFLAGS|IOFTYPE|IOLUNO|IONEWLEN|IOOP|IOOPCODE|IOPATH|IOPRECNT|IORECLEN|IORECNO|IOSTATUS|IOTOTAL|IOUSAGE|IOUTILITY|JUL-DATE|JUL-DAYS|JULIANDAY|JULIANYEAR|KIFSTAT|LAST-INP-LINE|LAST-INPUT-LINE|LINENO|LPP|MM1|MONTH|NEWBLOCK|NEWINITALLOC|NEWRECLEN|NEWSECALLOC|NUMTEST|NUPAGE|OMA-TAB|OMABUFF|OMAHI|OMALEN|OMALO|OMALUNO|OMAOP|OMASTATUS|OMAXFL|OPENOP|OUTPUT-TAB|PAGELEN|PRELINENO|PRINT-ID|PRINTER|PRLUNO|PRT-LPP|RECEIVE|RECVCALLBLK|REPLINE|SCBK|SEND|SITE-ID|STATIONID|STATUS|SYS(DATE|HR|MIN|SEC|TIME)|TALLY|THEPTR|USERNO|VAL-PARMS|VDT-LPP|YEAR|YEAR4|YR|YY1)\\b(?!-)"
			},
			{
				"name": "keyword.control.action.z",
				"match": "(?i)(?<!\\w-)\\b(ACCEPT|ADD|ALC|ARM|AUTHOR|BOX|CALL|CHAINR?|CHANGE|CLOSE|COMPUTE|COPY|CURSOR|DEF(INE)?|DELETE|DISPLAY|DIVIDE|END-PERFORM|ENDEF|ERASE|ERROR|EOJ|EXIT|EXTEND|FD|GEN|GIVING|GO(\\s*TO)?|I-O|(?<=^\\s*)INDEX|INPUT|INSERT|INSPECT|LET|LIST(LJ)?|(?<=^\\s*)LOCK|MAP|MARGIN|MESSAGE|MOVE|MULTIPLY|NEXT\\s+SENTENCE|OPEN|OUTPUT|PASSWORD|PERFORM|PRINT|PROMPTS?|READ(L|SC)?(\\s+(NEXT|PREV))?|REDEFINE|REDISPLAY|RETRY|REWRITE|SCI|SET|SHOW|SORT(MEM)?|START|SUBTRACT|TABR?|TRANSLATE|UNLOCK|WADSP|WORK|WRITE)\\b(?!-)"
			},
			{
				"name": "constant.regexp.z",
				"match": "(?i)(?<!\\w-)\\b(ACCEPT|ADD|ADJ|ALC|ALL|ALPHABETIC|AND|ARM|AS|ASC(ENDING)?|AT|AUTHOR|AUTOFF|BACKSPACE|BATCH|BEEP|BLINK|BOX|BY|CALL|CHAINR?|CHANGE|CLOSE|COMPUTE|COPY|CR|CURSOR|DEF(INE)?|DELETE|DEPENDING\\s+ON|DES(CENDING)?|DISPLAY|DIVIDE|DOWN|ECHO|EDIT|ELSE|END|END-PERFORM|ENDEF|ENDIF|EOJ|ERASE|ERROR|ERROR-MODE|EOFXITFD|EQ|EXIT|EXTEND|FD|FORWARDSPACE|FROM|GE|GEN|GIVING|GO(TO)?|GR(APHICS)?|GREATER|HEX|HI(GH)?|I-O|IF|INDEX|INPUT|INPUT-TAB|INSERT|INSPECT|INVALID|IOSTATUS|KEY|LAST|LE|LEFT|LESS|LET|LINE(LEN|NO)?|LINK|LIST(LJ)?|LIT|LJ|LOCK|LOW?|LPP|MAP|MARGIN|MESSAGE|MOVE|MULTIPLY|NE|NEGATIVE|NEW|NEXT|NL|NOCHG|NOCLEAR|NOFLOAT|NOGP|NOHDR|NOIO|NOLINK|NORM|NOSCREEN|NOT|NUMERIC|OMA-TAB|OFF|OFFSET|ON|OPEN|OR|OUTPUT|PAGELEN|PASSWORD|PERFORM|POS(ITION)?|POSITIVE|PREV|PRINT|PROMPTS?|READ(L|SC)?|REDEFINE|REDISPLAY|REMAINDER|RETRY|REWIND|REWRITE|RIGHT|RJ|ROUNDED|SCI|SECURE|SENTENCE|SET|SHOW|SIZE|SORT(MEM)?|SPACES?|START|SUBTRACT|SVC|TABR?|TAG|TALLYING|THAN|THROUGH|THRU|TRAILING|TRANSLATE|TO|UNLOCK|UNTIL|UP|USING|VALUES?|VARYING|VIA|WADSP|WARN(ING)?|WORK|WRITE|ZERO(E?S)?)\\b(?!-)"
			}]
		},
		"string": {
			"name": "string.quoted.single.z",
			"begin": "'",
			"end": "'"
		},
		"strings": {
			"name": "string.quoted.double.z",
			"begin": "\"",
			"end": "\""
		},
		"comments": {
			"name": "comment.line.z",
			"match": "(^\\s*(\\*|--|:).*$)|(\\s:\\s*.*$)"
		},
		"numbers": {
			"name": "constant.numeric.z",
			"match": "(?i)(?<!\\w)-?\\+?\\b(\\d+((\\.|,)\\d+)*)\\b(?!-)"
		},
		"variables": {
			"name": "variable.other.z",
			"match": "\\b[\\w-]+\\b"
		},
		"tags": {
			"name": "entity.name.function.z",
			"match": "(?im)\\b(\\d+-[\\w-]+)|((?<=((GO(\\s*TO)?)|(PERFORM)|(RETRY))\\s+)[\\w-]+)|(^[\\w-]+(?=\\.))|((?<=^(TAG\\s+)?)[\\w-]+\\.?\\s*$)|((?<=\\s+(THRU|THROUGH)\\s+)[\\w-]+)\\b",
			"patterns": [
				{
					"includes": "#keywords"
				}
			]
		},
		"operators": {
			"name": "constant.regexp.operators.z",
			"match": "(?i)(?<!-)(\\+|\\s(-|\\*)\\s|/|=|>|<|>=|<=|\\b(AND|OR|NOT|XOR|GREATER|LESS|EQUAL|THAN|GT|LT|EQ|LE|GE|NE)\\b)(?!-)"
		},
		"types": {
			"name": "entity.name.type.z",
			"match": "(?i)(?<=((RE)?DEF(INE)?\\s+)?[\\w-]+\\s+)\\b(GP|BI|SB|AN|UN|SN|SP|UP|DEC|RECLEN|OCCURS|TIMES|(PIC\\s+[\\w\\(\\)\\$\\*+-]+))(?=\\.?\\s*((\\s+:.*)?$|\\s\\d+))"
		},
		"file": {
			"name": "entity.name.class.z",
			"match": "(?i)(?<=^\\s*(FD|READL?(\\s+NEXT)?|START|INSERT|OPEN\\s+(INPUT|OUTPUT|I-O|EXTEND)|(RE)?WRITE|CLOSE|DELETE|(UN)?LOCK)\\s+)\\b([\\w-]+)\\b"
		},
		"call": {
			"patterns": [{
				"name": "constant.character.call.z",
				"match": "(?i)(?<=^\\s*(CALL|CHAINR?)\\s+)\\b(S\\$[\\w-]+)\\b",
				"captures": {
					"2": {
						"name": "markup.italic"
					}
				}
			},
			{
				"name": "variable.other.call.z",
				"match": "(?i)(?<=^\\s*(CALL|CHAINR?)\\s+)([\\w-]+)",
				"captures": {
					"2": {
						"name": "markup.italic"
					}
				}
			}]
		},
		"hex": {
			"name": "string.regexp.z",
			"match": "(?i)(>\\b[\\w-]+)|(?<=GR(APHICS)?)(\\b)\\b"
		},
		"punctuation": {
			"name": "punctuation.terminator.z",
			"match": "\\.|,"
		}
	},
	"scopeName": "source.z"
}